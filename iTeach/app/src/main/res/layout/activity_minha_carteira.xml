<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23d919"
    android:orientation="horizontal"
    tools:context=".MinhaCarteira">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Minha Carteira"
                android:textColor="#661A66"
                android:textSize="50sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="285dp"
                android:layout_height="50dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10000"
                android:text="Nome:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblNome"
                android:layout_width="282dp"
                android:layout_height="41dp"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="382dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="700"
                android:text="Pagamento:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblPagamento"
                android:layout_width="208dp"
                android:layout_height="46dp"
                android:layout_weight="100"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="7000"
                android:text="Cursos:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblQtd"
                android:layout_width="210dp"
                android:layout_height="45dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />

        </TableRow>
    </TableLayout>


</LinearLayout>